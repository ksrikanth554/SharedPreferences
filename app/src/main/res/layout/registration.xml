<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="enter mobile number"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/edtregmobile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="८dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.526"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="enter password"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/edtregpassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="८dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.448" app:layout_constraintVertical_bias="0.884"
            android:layout_marginBottom="८dp" app:layout_constraintBottom_toTopOf="@+id/edtregmobile"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="enter user name"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/edtregusername"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="८dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.125"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="enter email"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/edtregemail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="८dp"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.512"
            app:layout_constraintTop_toBottomOf="@+id/edtregusername" android:layout_marginBottom="८dp"
            app:layout_constraintBottom_toTopOf="@+id/edtregpassword"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="८dp" android:layout_marginRight="८dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="८dp"
            android:layout_marginStart="८dp" android:layout_marginTop="१६dp"
            app:layout_constraintTop_toBottomOf="@+id/edtregmobile" app:layout_constraintHorizontal_bias="0.498"
            tools:text="login" android:layout_marginBottom="८dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.161" android:id="@+id/btnreglogin"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="८dp" android:layout_marginRight="८dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="८dp"
            android:layout_marginStart="८dp" android:layout_marginTop="८dp"
            app:layout_constraintTop_toBottomOf="@+id/btnreglogin" app:layout_constraintHorizontal_bias="0.498"
            tools:text="register" android:layout_marginBottom="८dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.204" android:id="@+id/btnregregister" android:text="register"/>
</android.support.constraint.ConstraintLayout>